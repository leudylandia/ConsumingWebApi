@model ConsumingWebApi.ViewModels.CategoryBooksVM

@{
    ViewData["Title"] = "Category";
}

<div asp-validation-summary="ModelOnly" class="text-danger">
</div>

<h4>@ViewBag.Message</h4>

<div>
    <h1>Category Details</h1>
    <br />

    <div>
        <p>
            <b>Category Name:</b> @Model.Category.Name
        </p>
        <div class="form-group-center">
            <a class="btn btn-sm btn-primary" asp-controller="Categories" asp-action="UpdateCategory" asp-route-categoryId="@Model.Category.Id">Update</a> |
            <a class="btn btn-sm btn-danger" asp-controller="Categories" asp-action="DeleteCategory" asp-route-categoryId="@Model.Category.Id">Delete</a>
        </div>
    </div>
    <br /><br />
    <div>
        <h3><b>Books</b></h3><br />
        <h4>@ViewBag.BookMessage</h4>

        @foreach (var item in Model.Books)
        {
            <di>
                <p>
                    <b>Title:</b>
                    <span>@item.Title</span>
                    <a asp-controller="Home" asp-action="GetBookById" asp-route-book="@item.Id">Book Details</a>
                </p>
            </di>
        }
    </div>
</div>

